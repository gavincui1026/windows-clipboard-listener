# GPU版本的Docker镜像
FROM nvidia/cuda:12.1.0-devel-ubuntu22.04

# 安装Python和依赖
RUN apt-get update && apt-get install -y \
    python3 \
    python3-pip \
    python3-dev \
    build-essential \
    git \
    && rm -rf /var/lib/apt/lists/*

# 设置工作目录
WORKDIR /app

# 复制代码
COPY . .

# 安装Python依赖
RUN pip3 install -r requirements.txt

# 编译CUDA代码
RUN cd gpu_cuda && chmod +x build.sh && ./build.sh

# 暴露端口
EXPOSE 8002

# 启动命令
CMD ["python3", "main.py"]
